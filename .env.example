# Database
DATABASE_URL=postgresql://user:password@localhost:5432/securepay_wallet

# JWT Configuration
SECRET_KEY=your-secret-key-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment Detection (Optional)
# Set to 'production' for production URLs, or 'development' for local development
# If not set, it will auto-detect based on DATABASE_URL
# ENVIRONMENT=development

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Leave empty to auto-detect based on environment, or set explicitly if needed
GOOGLE_REDIRECT_URI=

# Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# Application
APP_NAME=SecurePay Wallet
APP_VERSION=1.0.0

# Application URLs (Optional)
# Leave empty to auto-detect based on environment, or set explicitly if needed
# For local development: http://localhost:8000 and http://localhost:3000
# For production: https://api-securepay-wallet.mooo.com
FRONTEND_URL=
BACKEND_URL=
